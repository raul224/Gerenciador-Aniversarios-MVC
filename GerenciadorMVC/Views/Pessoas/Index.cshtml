@model GerenciadorMVC.Models.ListasIndex

<div class="text-center">
    <h3 class="display-4">Bem vindo</h3>
    <div>
        <h3 class="display-4">Aniversariantes do dia!</h3>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Sobrenome</th>
                    <th scope="col">Data de aniversário</th>
                    <th scope="col">-</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pessoa in Model.listaAniversariantesDoDia)
                    {
                    <tr>
                        <td>@pessoa.nome</td>
                        <td>@pessoa.sobreNome</td>
                        <td>@pessoa.aniversario</td>
                        <td>
                            <a href="/Pessoas/Editar?id=@pessoa.id" class="btn btn-primary btg-lg active" role="button" aria-pressed="true">Editar</a>
                            <a href="/Pessoas/Deletar?id=@pessoa.id" class="btn btn-danger btg-lg active" role="button" aria-pressed="true">Excluir</a>
                        </td>
                    </tr>
                    }
            </tbody>
        </table>
    </div>
    <div>
        <h3 class="display-4">Proximos aniversariantes</h3>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Sobrenome</th>
                    <th scope="col">Data de aniversário</th>
                    <th scope="col">-</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pessoa in Model.listaPessoasPorAniversario)
                {
                    <tr>
                        <td>@pessoa.nome</td>
                        <td>@pessoa.sobreNome</td>
                        <td>@pessoa.aniversario</td>
                        <td>
                            <a href="/Pessoas/Editar?id=@pessoa.id" class="btn btn-primary btg-lg active" role="button" aria-pressed="true">Editar</a>
                            <a href="/Pessoas/Deletar?id=@pessoa.id" class="btn btn-danger btg-lg active" role="button" aria-pressed="true">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

